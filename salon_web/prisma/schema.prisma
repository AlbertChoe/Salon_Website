datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(uuid())
  fullName String
  email    String   @unique
  phone    String
  password String
  role     String
  Review   Review[]
}

model Reservation {
  id       String   @id @default(uuid())
  name     String
  phone    String
  service  String
  dateTime DateTime
}

model Review {
  id      String @id @default(uuid())
  name    String
  rating  Int
  comment String
  userId  String
  user    User   @relation(fields: [userId], references: [id])
}
