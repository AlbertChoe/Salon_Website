datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String         @id @default(uuid())
  fullName     String
  email        String         @unique
  phone        String
  password     String
  role         String
  reviews      Review[]
  reservations Reservation[] 
}

model Reservation {
  id       String   @id @default(uuid())
  name     String
  phone    String
  service  String
  date     String
  time     String
  userId   String   
  user     User     @relation(fields: [userId], references: [id])
  @@index([date, time])
}

model Review {
  id      String @id @default(uuid())
  name    String
  rating  Int
  comment String
  userId  String
  user    User   @relation(fields: [userId], references: [id])
}

model Service {
  id       String   @id @default(uuid())
  name     String
  duration Int      // Duration in minutes
  price    String      // Price in currency units
}

model TimeSlot {
  id        String   @id @default(uuid())
  date      String   
  startTime String   // Time slot start time
  endTime   String   // Time slot end time
  @@index([date, startTime, endTime])
}