datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(uuid())
  fullName String
  email    String   @unique
  phone    String
  password String
  role     String
  reviews  Review[]
}

model Reservation {
  id       String   @id @default(uuid())
  name     String
  phone    String
  service  String
  date     String
  time     String
  @@index([date, time])
}


model Review {
  id      String @id @default(uuid())
  name    String
  rating  Int
  comment String
  userId  String
  user    User   @relation(fields: [userId], references: [id])
}

model Service {
  id       String   @id @default(uuid())
  name     String
  duration Int      // Duration in minutes
}

model TimeSlot {
  id        String   @id @default(uuid())
  startTime DateTime
  endTime   DateTime
  isBooked  Boolean
  @@index([startTime, endTime]) // Index these fields if querying frequently
}
